
@{
    Layout = null;
    var school = School.LoadData.GetSchoolList(1).FirstOrDefault();
}

<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>System Login | @school.FullName</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/Content/admin/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/admin/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/admin/assets/css/bootstrap_limitless.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/admin/assets/css/layout.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/admin/assets/css/components.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/admin/assets/css/colors.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Plugins/Toastr/toastr.css" rel="stylesheet" />
    <link href="~/Content/Custome.css" rel="stylesheet" />

</head>
<body ng-controller="SystemLoginController" ng-cloak>
    <div class="fullDiv" ng-if="dataLoading">
        <div class="processDiv">
            <i class="icon-spinner2 spinner" style="font-size:6rem;color:#178076"></i>
        </div>
    </div>

    <div id="myModal" class="Modal is-hidden is-visuallyHidden" ng-if="dataLoading">
    </div>

    <div class="page-content">
        <div class="content-wrapper">
            <div class="content d-flex justify-content-center align-items-center">
                <form class="login-form" name="formLogin" novalidate>
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <img style="width:160px" class="icon-reading icon-2x text-slate-300 rounded-round mb-3 mt-1" src="@school.LogoUrl" />
                                @*<i class="icon-reading icon-2x text-slate-300 border-slate-300 border-3 rounded-round p-3 mb-3 mt-1"></i>*@
                                <h5 class="mb-0">Login to your account</h5>
                                <span class="d-block text-muted">Enter your credentials below</span>
                            </div>
                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input type="text" class="form-control" placeholder="Username" ng-model="UserId" name="UserId" ng-class="IsSubmitted ? 'ng-dirty' : ''" required autofocus>
                                <div class="form-control-feedback"><i class="icon-user text-muted"></i></div>
                                <span class="text-danger" ng-if="(formLogin.UserId.$dirty || IsSubmitted) && formLogin.UserId.$error.required">User Name is required!</span>
                            </div>
                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input type="password" class="form-control" placeholder="Password" name="Password" ng-model="Password" ng-class="IsSubmitted ? 'ng-dirty' : ''" required autofocus>
                                <div class="form-control-feedback"><i class="icon-lock2 text-muted"></i></div>
                                <span class="text-danger" ng-if="(formLogin.Password.$dirty || IsSubmitted) && formLogin.Password.$error.required">Password is required!</span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block" ng-click="systemLogin()">Sign in <i class="icon-circle-right2 ml-2"></i></button>
                            </div>
                            @*<div class="text-center">
                                <a href="#">Forgot password?</a>
                            </div>*@
                        </div>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="navbar navbar-expand-lg navbar-light">
                <div class="text-center d-lg-none w-100">
                    <button type="button" class="navbar-toggler dropdown-toggle" data-toggle="collapse" data-target="#navbar-footer">
                        <i class="icon-unfold mr-2"></i>
                        Footer
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar-footer">
                    <span class="navbar-text">
                        &copy; @DateTime.Now.ToString("yyyy") <a href="@school.Website" target="_blank">@(school.FullName + ", " + school.Location)</a> All right reserved. Design and Developed by <a href="http://www.wipenex.in/" target="_blank">Wipenex IT Private Limited</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/admin/js/main/jquery.min.js"></script>
    <script src="~/Content/admin/js/main/bootstrap.bundle.min.js"></script>
    <script src="~/Content/admin/js/plugins/loaders/blockui.min.js"></script>
    <script src="~/Content/admin/assets/js/app.js"></script>
    <script src="~/Content/Plugins/Toastr/toastr.min.js"></script>
    <script src="~/Scripts/Angular/angular.js"></script>
    <script src="~/Angular/Site/SiteModule.js"></script>
    <script src="~/Angular/Site/SiteService.js"></script>
    <script src="~/Angular/Site/Controller/SystemLoginController.js"></script>
</body>
</html>

