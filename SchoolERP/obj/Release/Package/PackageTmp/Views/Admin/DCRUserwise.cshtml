
@{
    Layout = null;
}
<style>
    hr {
        margin-top: 0;
    }

    tr, td, th {
        white-space: nowrap
    }
</style>

<div class="fullDiv" ng-if="dataLoading">
    <div class="processDiv">
        <i class="icon-spinner2 spinner" style="font-size:6rem;color:#178076"></i>
    </div>
</div>

<div id="myModal" class="Modal is-hidden is-visuallyHidden" ng-if="dataLoading">
</div>

<div class="page-header page-header-light" ng-cloak>
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="#!" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                <span class="breadcrumb-item active">Daily Collection Report (Userwise)</span>
            </div>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>

<div class="content" ng-cloak>
    <div class="card">
        <div class="card-header bg-white header-elements-inline">
            <h6 class="card-title">Daily Collection Report (User & Headwise)</h6>
        </div>
        <div class="card-body">
            <form name="formDCR" novalidate>
                <div class="form-group row">
                    <div class="col-lg-4">
                        <label class="col-form-label font-weight-bold col-sm-4">From Date <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <input type="date" class="form-control" ng-model="FromDate" name="FromDate" ng-class="IsSubmitted ? 'ng-dirty' : ''" required autofocus />
                            <span class="text-danger" ng-if="(formDCR.FromDate.$dirty || IsSubmitted) && formDCR.FromDate.$error.required">From Date is required!</span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <label class="col-form-label font-weight-bold col-sm-4">To Date <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <input type="date" class="form-control" ng-model="ToDate" name="ToDate" ng-class="IsSubmitted ? 'ng-dirty' : ''" required autofocus />
                            <span class="text-danger" ng-if="(formDCR.ToDate.$dirty || IsSubmitted) && formDCR.ToDate.$error.required">To Date is required!</span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <button class="btn btn-sm btn-success" ng-click="printFeeCollectionReport()">Print</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


