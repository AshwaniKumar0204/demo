
@{
    Layout = null;
}
<style>
    hr {
        margin-top: 0;
    }

    tr, td, th {
        white-space: nowrap
    }
</style>

<div class="fullDiv" ng-if="dataLoading">
    <div class="processDiv">
        <i class="icon-spinner2 spinner" style="font-size:6rem;color:#178076"></i>
    </div>
</div>

<div id="myModal" class="Modal is-hidden is-visuallyHidden" ng-if="dataLoading">
</div>

<div class="page-header page-header-light" ng-cloak>
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="#!" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                <span class="breadcrumb-item">Library</span>
                <span class="breadcrumb-item active">News Paper Purchase</span>
            </div>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>

<div class="content" ng-cloak>
    <div class="card">
        <div class="card-header bg-white header-elements-inline">
            <h6 class="card-title">News Paper Purchase</h6>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <div class="col-lg-4">
                    <label class="col-form-label font-weight-bold col-lg-4">Date</label>
                    <div class="col-lg-8">
                        <input type="date" ng-model="PurchaseDate" class="form-control" />
                    </div>
                </div>
                <div class="col-lg-3">
                    <button class="btn btn-sm btn-success" ng-click="getNewPaperListForPurchase()"><i class="fa fa-search"></i> Search</button>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <fieldset class="mb-3" ng-show="NewsPaperPurchaseList.length > 0">
                        <legend class="text-uppercase font-size-sm font-weight-bold">News Paper List</legend>
                        <div class="form-group col-sm-12 table-responsive">
                            <table class="table table-bordered table-hover datatable-highlight" id="tbl_admission_list">
                                <thead>
                                    <tr>
                                        <th>Sl. No.</th>
                                        <th>News Paper</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="purchase in NewsPaperPurchaseList">
                                        <td>{{$index+1}}</td>
                                        <td>{{purchase.NewsPaperName}}</td>
                                        <td>
                                            <input type="number" ng-model="purchase.Price" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-centre" ng-if="NewsPaperPurchaseList.length > 0 && CanEdit">
        <button class="btn btn-primary" ng-click="saveNewsPaperPurchase()">Save</button>
    </div>
</div>



