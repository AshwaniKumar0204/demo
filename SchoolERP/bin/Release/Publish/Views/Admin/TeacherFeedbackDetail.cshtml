
@{
    /**/

    Layout = null;
}
<style>
    .col-form-label {
        line-height: 1.2 !important
    }
</style>

<div class="fullDiv" ng-if="dataLoading">
    <div class="processDiv">
        <i class="icon-spinner2 spinner" style="font-size:6rem;color:#178076"></i>
    </div>
</div>

<div id="myModal" class="Modal is-hidden is-visuallyHidden" ng-if="dataLoading">
</div>

<div class="page-header page-header-light" ng-cloak>
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="#" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                <a href="#" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Performance 360</a>
                <span class="breadcrumb-item active">Teacher Feedback Form</span>
            </div>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>

<div class="content">
    <div class="card">
        <div class="card-header bg-white header-elements-inline">
            <h6 class="card-title">Teacher Feedback Form</h6>
        </div>

        <div class="card-body">
            <div class="form-group row">
                <div class="col-lg-4">
                    <label class="col-form-label font-weight-bold col-lg-12">Session : {{AcademicSession.SessionName}}</label>
                </div>
            </div>
            <fieldset class="mb-3" ng-repeat="parmaOne in PerformanceParameterList">
                <legend class="text-uppercase font-size-sm font-weight-bold">{{parmaOne.ParentParameterName}}</legend>
                <div class="row">
                    <div class="form-group" ng-class="parmaTwo.FieldType <3?'col-sm-6':'col-sm-12'" ng-repeat="parmaTwo in parmaOne.ParameterList">
                        <div ng-if="parmaTwo.FieldType == 1">
                            <label class="col-form-label">{{parmaTwo.ParameterName}} :</label>
                            <input type="text" disabled ng-model="parmaTwo.Remarks" class="form-control">
                        </div>
                        <div ng-if="parmaTwo.FieldType == 2">
                            <label class="font-weight-bold"> {{parmaTwo.ParameterName}}</label>
                            <textarea disabled ng-model="parmaTwo.Remarks" class="form-control"></textarea>
                        </div>
                        <!--Teacher Experience-->
                        <div ng-if="parmaTwo.ParameterId == TeachingExprienceId">
                            <label class="font-weight-bold"> {{parmaTwo.ParameterName}}:</label>
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sl. No.</th>
                                            <th>Years</th>
                                            <th>School</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="model in TeacherExperienceList">
                                            <td>{{$index + 1}}</td>
                                            <td>{{model.Year}}</td>
                                            <td>{{model.SchoolName}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!--Teacher Subject-->
                        <div ng-if="parmaTwo.ParameterId == ClassTaught">
                            <label class="font-weight-bold"> {{parmaTwo.ParameterName}}:</label>
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sl. No.</th>
                                            <th>Class Taught</th>
                                            <th>Subject</th>
                                            <th>No. of periods per week</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="model in TeacherSubjectList">
                                            <td>{{$index + 1}}</td>
                                            <td>{{model.ClassName2 + " - "+ model.SectionName}}</td>
                                            <td>{{model.SubjectName}}</td>
                                            <td>{{model.NoOfPeriods}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!--Teacher CoScholastic-->
                        <div ng-if="parmaTwo.ParameterId == CoScholastic">
                            <label class="font-weight-bold"> {{parmaTwo.ParameterName}}:</label>
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sl. No.</th>
                                            <th>Events</th>
                                            <th>Event Date</th>
                                            <th>Teacher Role</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="model in TeacherCoScholasticList">
                                            <td>{{$index + 1}}</td>
                                            <td>{{model.Events}}</td>
                                            <td>{{model.EventDate | date:'dd-MM-yyyy'}}</td>
                                            <td>{{model.TeacherRole}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!--Training Programmes-->
                        <div ng-if="parmaTwo.ParameterId == TrainingProgrammePrameterId">
                            <label class="font-weight-bold"> {{parmaTwo.ParameterName}}:</label>
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sl. No.</th>
                                            <th>Subject</th>
                                            <th>Trainind Date</th>
                                            <th>Place</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="model in TrainingProgrammeList">
                                            <td>{{$index + 1}}</td>
                                            <td>{{model.Subject}}</td>
                                            <td>{{model.TrainingDate | date:'dd-MM-yyyy'}}</td>
                                            <td>{{model.Place}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!--Teacher Learning Aids-->
                        <div ng-if="parmaTwo.ParameterId == TeacherLearningAidsPramaterId">
                            <label class="font-weight-bold"> {{parmaTwo.ParameterName}}:</label>
                            <hr />
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sl. No.</th>
                                            <th>Class</th>
                                            <th>Subject</th>
                                            <th>Topics</th>
                                            <th>Aids</th>
                                            <th>Reference Book</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="model in TeachingLearningAidList">
                                            <td>{{$index + 1}}</td>
                                            <td>{{model.ClassName2}}</td>
                                            <td>{{model.SubjectName}}</td>
                                            <td>
                                                {{model.Topics}}
                                                @*<textarea ng-model="model.Topics" placeholder="Enter Topics" class="form-control"></textarea>*@
                                            </td>
                                            <td>
                                                {{model.Aids}}
                                                @*<textarea ng-model="model.Aids" placeholder="Enter Aids" class="form-control"></textarea>*@
                                            </td>
                                            <td>
                                                {{model.ReferanceBooks}}
                                                @*<textarea ng-model="model.ReferanceBooks" placeholder="Enter Referance Books" class="form-control"></textarea>*@
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!--Teacher Book Read-->
                        <div ng-if="parmaTwo.ParameterId == BookReading">
                            <label class="font-weight-bold"> {{parmaTwo.ParameterName}}:</label>
                            <hr />
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sl. No.</th>
                                            <th>Book Type</th>
                                            <th>Book Name</th>
                                            <th>Author</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="model in TeacherBookReadList">
                                            <td>{{$index + 1}}</td>
                                            <td>{{model.BookReadTypeName}}</td>
                                            <td>{{model.BookName}}</td>
                                            <td>{{model.Author}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset class="mb-3" ng-repeat="parmaOne in PerformanceParameterListFromPricipal">
                <legend class="text-uppercase font-size-sm font-weight-bold">{{parmaOne.ParentParameterName}}</legend>
                <div class="row">
                    <div class="col-sm-12 form-group" ng-repeat="parmaTwo in parmaOne.ParameterList">
                        <label class="col-sm-5 col-form-label">{{parmaTwo.ParameterName}} :</label>
                        <div class="col-sm-3">
                            <select ng-model="parmaTwo.RatingDetailId" class="form-control" ng-options="option.RatingDetailId as option.Title for option in parmaTwo.RatingDetailList">
                                <option value="">--Select--</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <input type="text" placeholder="Enter Remarks" ng-model="parmaTwo.Remarks" class="form-control">
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="card-footer text-centre" ng-show="PerformanceParameterListFromPricipal.length > 0">
            <button class="btn btn-primary" ng-click="saveTeacherPerformanceByPrincipal()">Submit</button>
        </div>
    </div>
</div>

