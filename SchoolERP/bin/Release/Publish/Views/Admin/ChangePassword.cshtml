@{
    Layout = null;
}

<div class="fullDiv" ng-if="dataLoading">
    <div class="processDiv">
        <i class="icon-spinner2 spinner" style="font-size:6rem;color:#178076"></i>
    </div>
</div>

<div id="myModal" class="Modal is-hidden is-visuallyHidden" ng-if="dataLoading">
</div>

<div class="page-header page-header-light" ng-cloak>
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="#" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                <span class="breadcrumb-item active">Change Password</span>
            </div>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>

<div class="content">
    <div class="card">
        <div class="card-header bg-white header-elements-inline">
            <h6 class="card-title">Change Password</h6>
        </div>
        <div class="card-body">

            <form novalidate name="fromStudent">
                <div class="row">
                    <div class="col-sm-4"></div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Current Password <span class="text-danger">*</span></label>
                            <input type="text" name="OldPassword" ng-model="ChangePassword.OldPassword" ng-class="IsSubmitted ? 'ng-dirty' : ''" class="form-control required" placeholder="Enter Current Password" required autofocus>
                            <span class="text-danger" ng-if="(fromStudent.OldPassword.$dirty || IsSubmitted) && fromStudent.OldPassword.$error.required">Current Password is required!</span>
                        </div>
                        <div class="form-group">
                            <label>New Password <span class="text-danger">*</span></label>
                            <input type="text" name="NewPassword" ng-model="ChangePassword.NewPassword" ng-class="IsSubmitted ? 'ng-dirty' : ''" class="form-control required" placeholder="Enter New Password" required autofocus>
                            <span class="text-danger" ng-if="(fromStudent.NewPassword.$dirty || IsSubmitted) && fromStudent.NewPassword.$error.required">New Password is required!</span>
                        </div>
                        <div class="form-group">
                            <label>Confirm New Password <span class="text-danger">*</span></label>
                            <input type="text" name="ConfirmNewPassword" ng-model="ChangePassword.ConfirmNewPassword" ng-class="IsSubmitted ? 'ng-dirty' : ''" class="form-control required" placeholder="Enter New Password" required autofocus>
                            <span class="text-danger" ng-if="(fromStudent.ConfirmNewPassword.$dirty || IsSubmitted) && fromStudent.ConfirmNewPassword.$error.required">Confirmation is required!</span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer text-centre">
            <button class="btn btn-primary" ng-click="changeSystemLoginPassword()">Update</button>
        </div>
    </div>
</div>

