
@{
    Layout = null;
}
<style>
    hr {
        margin-top: 0;
    }

    tr, td, th {
        white-space: nowrap
    }
    ul{
        margin-bottom:0;
    }
    /*textarea {
        padding: 10px 12px 2px 12px!important;
        line-height:0.5 !important;
    }*/
</style>

<div class="fullDiv" ng-if="dataLoading">
    <div class="processDiv">
        <i class="icon-spinner2 spinner" style="font-size:6rem;color:#178076"></i>
    </div>
</div>

<div id="myModal" class="Modal is-hidden is-visuallyHidden" ng-if="dataLoading">
</div>

<div class="page-header page-header-light" ng-cloak>
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="#!" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                <span class="breadcrumb-item active">Fee Collection Report</span>
            </div>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>

<div class="content" ng-cloak>
    <div class="card">
        <div class="card-header bg-white header-elements-inline">
            <h6 class="card-title">Fee Collection Report</h6>
        </div>
        <div class="card-body">
            <form name="formDCR" novalidate>
                <div class="row">
                    <div class="col-lg-4 form-group">
                        <label class="col-form-label font-weight-bold col-sm-4">Session <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <select ng-model="AcademicSessionId" ng-options="option.AcademicSessionId as option.SessionName for option in AcademicSessionList" class="form-control">
                                <option value="">--Select All Session--</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4 form-group">
                        <label class="col-form-label font-weight-bold col-sm-4">From Date <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <input type="date" class="form-control" ng-model="FromDate" name="FromDate" ng-class="IsSubmitted ? 'ng-dirty' : ''" required autofocus />
                            <span class="text-danger" ng-if="(formDCR.FromDate.$dirty || IsSubmitted) && formDCR.FromDate.$error.required">From Date is required!</span>
                        </div>
                    </div>
                    <div class="col-lg-4 form-group">
                        <label class="col-form-label font-weight-bold col-sm-4">To Date <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <input type="date" class="form-control" ng-model="ToDate" name="ToDate" ng-class="IsSubmitted ? 'ng-dirty' : ''" required autofocus />
                            <span class="text-danger" ng-if="(formDCR.ToDate.$dirty || IsSubmitted) && formDCR.ToDate.$error.required">To Date is required!</span>
                        </div>
                    </div>
                    <div class="col-lg-12 form-group">
                        <label class="col-form-label font-weight-bold col-sm-2">Payment Mode <span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <div class="col-lg-2 col-md-3 col-4">
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" ng-change="changeSelectAll()" ng-model="IsAllSelected"> All
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-3 col-4" ng-repeat="paymentMode in PaymentModeList" ng-show="paymentMode.Key > 0">
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" ng-model="paymentMode.IsSelected">
                                        {{paymentMode.Value}}
                                    </label>
                                </div>
                            </div>
                            
                            @*<multi-select values="PaymentModeList"
                      model="selectedPaymentModes "
                      show-filters="true"
                      show-other="false"
                      other-ng-model="other"
                      other-field="isOther"
                      other-event="keyup"
                      value-field="Key"
                      label-field="Value"
                      template-path="http://rawgit.com/ncapito/angular-multiselect/master/views/directives/multi-select.html">
        </multi-select>*@
                        </div>
                    </div>
                   
                </div>
            </form>
        </div>
        <div class="card-footer">
            <div class="col-sm-12 text-centre">
                <button class="btn btn-sm btn-success" ng-click="printFeeCollectionReport()">Print</button>
            </div>
        </div>
    </div>
</div>


