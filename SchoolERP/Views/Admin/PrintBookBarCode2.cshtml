@{
    Layout = null;
}

<div class="fullDiv" ng-if="dataLoading">
    <div class="processDiv">
        <i class="icon-spinner2 spinner" style="font-size:6rem;color:#178076"></i>
    </div>
</div>

<div id="myModal" class="Modal is-hidden is-visuallyHidden" ng-if="dataLoading">
</div>

<div class="page-header page-header-light" ng-cloak>
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="#" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                <span class="breadcrumb-item active">Print Barcode 2</span>
            </div>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>

<div class="content">
    <div class="card">
        <div class="card-header bg-white header-elements-inline">
            <h6 class="card-title">Print Barcode 2</h6>
        </div>
        <div class="card-body">
            <form name="formBookAccession" novalidate autocomplete="off">
                <div class="row">
                    <div class="col-lg-6 form-group">
                        <label class="col-form-label font-weight-bold col-lg-4">Accession No </label>
                        <div class="col-lg-8">
                            <input type="text" ng-model="AccessionNo" ng-change="changeAccessionNo()" name="AccessionNo" placeholder="Enter Accession No" class="form-control" ng-class="IsSubmittedAccession ? 'ng-dirty' : ''" required autofocus />
                            <span class="text-danger" ng-if="(formBook.AccessionNo.$dirty || IsSubmittedAccession) && formBook.AccessionNo.$error.required">Accession No is required!</span>
                            <span ng-if="selectedBookAccession.BookName"><b>Book Name: </b> {{selectedBookAccession.BookName}}</span>
                        </div>
                    </div>
                    <div class="col-lg-4 form-group">
                        <label class="col-form-label font-weight-bold col-lg-6">Quantity </label>
                        <div class="col-lg-6">
                            <input type="number" ng-model="NoOfQuantity" name="NoOfQuantity" placeholder="Enter Quantity" class="form-control" ng-class="IsSubmittedAccession ? 'ng-dirty' : ''" required autofocus />
                            <span class="text-danger" ng-if="(formBook.NoOfQuantity.$dirty || IsSubmittedAccession) && formBook.NoOfQuantity.$error.required">Quantity is required!</span>
                        </div>
                    </div>
                    <div class="col-lg-2 form-group">
                        <button class="btn btn-sm btn-primary" ng-click="addAccession()">Add</button>
                    </div>
                </div>
                <div class="row" ng-if="AccessionList.length >0">
                    <div class="form-group col-sm-12 table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Sl. No.</th>
                                    <th>Accession No</th>
                                    <th>Book Name</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="a1 in AccessionList">
                                    <td>{{$index + 1}}</td>
                                    <td>{{a1.id}}</td>
                                    <td>{{a1.BookName}}</td>
                                    <td>{{a1.NoOfQuantity}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-lg-12 form-group text-centre">
                        <button class="btn btn-sm btn-primary" ng-click="printBookBarCodeWithAccessionNo(3)">Print</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

